<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Thickness x:Key="TotalMargin" Left="10" Top="10" Right="10" Bottom="10" />
    <Thickness x:Key="TotalMargin2" Left="20" Top="20" Right="20" Bottom="20" />
    <GridLength x:Key="FirstColWidth">300</GridLength>
    <GridLength x:Key="Spacing">20</GridLength>
    
    
    <Color x:Key="DetailMark">#FFA1A9B3</Color>
    <SolidColorBrush x:Key="DetailMarkBrush" Color="{StaticResource ResourceKey=DetailMark}" />
    <Style x:Key="FlatTextBox" TargetType="{x:Type TextBox}">
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <StackPanel Orientation="Vertical">
                        <TextBox 
                            TextAlignment="Left" 
                            TextWrapping="Wrap" 
                            FontSize="18" 
                            Background="#818181" 
                            Text="{TemplateBinding Text}" 
                            BorderThickness="0" 
                            CaretBrush="White"
                            Height="{TemplateBinding Height}"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    
    
</ResourceDictionary>
<UserControl x:Class="GitlabManager.Views.MainWindow.Pages.ProjectList.AreaSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GitlabManager.Views.MainWindow.Pages.ProjectList"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    
    <StackPanel Margin="10">
        <TextBlock FontSize="16">Settings</TextBlock>
        
        <TextBlock FontSize="14" Foreground="LightGray" Margin="0,20,0,0">Sorting:</TextBlock>
        <RadioButton IsChecked="True"
                     Content="Last updated"
                     FontSize="14"
                     Margin="{adonisUi:Space 2, 0, 0, 0}"/>
        
        <RadioButton IsChecked="False"
                     Content="Alphabetical"
                     FontSize="14"
                     Margin="{adonisUi:Space 2, 0, 0, 0}"/>
        
    </StackPanel>
    
    
</UserControl>
